<!-- Paginator -->
<%
if( total > 12 ) {

	var numPages = total / 12
%>
    <div class="wrapper-org-search-paginator">
        <ul>
            <% for( i = 0; i <= numPages; i++ ){ %>
                <li>
                    <a href="#org/search/<%= term %>/<%= i + 1 %>" <%=( page==( i+1)) ? 'class="active"': '' %> ></a>
                </li>
                <% } %>
        </ul>
    </div>
    <% } %>